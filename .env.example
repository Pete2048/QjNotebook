# =============================================================================
# QjNotebook 环境配置示例
# 复制此文件为 .env 并填入实际配置值
# =============================================================================

# =============================================================================
# 基础配置
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 服务端口配置
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# LLM 提供商配置
# =============================================================================

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# DeepSeek 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Google Gemini 配置
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# 字节跳动豆包配置
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
DOUBAO_MODEL=doubao-pro-4k

# 默认 LLM 提供商 (openai/deepseek/gemini/doubao)
DEFAULT_LLM_PROVIDER=openai

# =============================================================================
# 嵌入模型配置
# =============================================================================

# 嵌入提供商 (openai/deepseek/huggingface/local)
EMBEDDING_PROVIDER=openai

# OpenAI 嵌入配置
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# HuggingFace 嵌入配置
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# 本地嵌入模型路径
LOCAL_EMBEDDING_MODEL_PATH=./models/embedding

# =============================================================================
# 向量数据库配置
# =============================================================================

# 向量存储类型 (chroma/milvus)
VECTOR_STORE_TYPE=chroma

# Chroma 配置
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./storage/chroma

# Milvus 配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=
MILVUS_DATABASE=default

# =============================================================================
# 文档处理配置
# =============================================================================

# 文档分块配置
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 支持的文件类型
SUPPORTED_FILE_TYPES=pdf,docx,txt,md,csv

# 文件上传限制 (MB)
MAX_FILE_SIZE=50

# 文档存储路径
DOCUMENT_STORAGE_PATH=./storage/documents

# =============================================================================
# RAG 配置
# =============================================================================

# 检索配置
RETRIEVAL_TOP_K=5
RETRIEVAL_SCORE_THRESHOLD=0.7

# 重排序配置
RERANKER_TYPE=mmr
RERANKER_TOP_K=3
MMR_LAMBDA=0.5

# 生成配置
GENERATION_MAX_TOKENS=2000
GENERATION_TEMPERATURE=0.7

# =============================================================================
# 缓存配置
# =============================================================================

# 缓存类型 (memory/redis)
CACHE_TYPE=memory

# Redis 配置 (如果使用 Redis 缓存)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 缓存过期时间 (秒)
CACHE_TTL=3600

# =============================================================================
# 知识图谱配置 (可选)
# =============================================================================

# 是否启用知识图谱
ENABLE_KNOWLEDGE_GRAPH=false

# Neo4j 配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# =============================================================================
# 安全配置
# =============================================================================

# JWT 密钥 (生产环境请使用强密钥)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# 监控和日志配置
# =============================================================================

# 日志文件路径
LOG_FILE_PATH=./logs/app.log

# 是否启用性能监控
ENABLE_MONITORING=true

# 是否启用请求日志
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# Docker 配置
# =============================================================================

# Docker Compose 配置文件
COMPOSE_PROFILES=lite

# 数据持久化路径
DATA_PATH=./data

# =============================================================================
# 开发配置
# =============================================================================

# 是否启用热重载
ENABLE_RELOAD=true

# 是否启用 API 文档
ENABLE_DOCS=true

# API 文档路径
DOCS_URL=/docs
REDOC_URL=/redoc